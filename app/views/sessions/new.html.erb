<div class = "flash flash-notice">
  <%= flash[:notice] %>
</div>

<div class = "flash flash-alert">
  <%= flash[:alert] %>
</div>

<h1>Log in</h1> <br />

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <div><%= submit_tag "Log in", :class => "btn btn-primary" %></div>
<% end %>